{
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "diagnostic.errorSign": "‚ùó",
  "diagnostic.warningSign": "üí°",
  "diagnostic.infoSign": "üí°",

  "coc.preferences.formatOnSave": false,

  "languageserver": {
    "asm-lsp": {
      "command": "asm-lsp",
      "filetypes": ["asm", "s", "S", "assembly", "nasm"]
    },
    "bitbake": {
      "command": "bitbake-language-server",
      "filetypes": ["bitbake"]
    },
  },

  "inlayHint.display": false,

  // Clangd settings
  "clangd.compilationDatabaseCandidates": ["./", "build", "Debug", "Release"],
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy"
  ],

  // Python settings
  "python.formatting.provider": "black",
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTypes": false,
  "snippets.ultisnips.pythonPrompt": false,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.typeCheckingMode": "basic",
  
  // coc-diagnostic settings
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "markdown": [ "write-good", "markdownlint" ],
    "sh": "shellcheck",
    "yaml": [ "yamllint" ],
    "cmake": [ "cmake-lint", "cmakelint" ],
    "systemd": "systemd-analyze",
  },
  "diagnostic-languageserver.formatFiletypes": {
     "sh": "shfmt",
     "cmake": "cmake-format",
  },

  "sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json"
}

